{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": [
        "main"
    ],
    "permissions": [
        "core:default",
        "opener:default",
        "fs:default",
        {
            "identifier": "fs:scope",
            "allow": [
                { "path": "$DOCUMENT/Rack Designer"},
                { "path": "$APPLOCALDATA/" }
            ]
        },
        "dialog:allow-open",
        "dialog:allow-message",
        "dialog:default"
    ]
}